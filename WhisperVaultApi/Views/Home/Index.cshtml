@{
    ViewData["Title"] = "Whisper Vault";
}

<h2 class="text-center mt-5">🕊️ Whisper to the Vault</h2>
<form asp-controller="Confessions" asp-action="Submit" method="post">

    <div class="form-group mt-4">
        <label for="confessionText">Your Confession</label>
        <textarea id="confessionText" class="form-control" name="text" rows="5" required placeholder="Let it all out... anonymously"></textarea>
    </div>

    <div class="form-group mt-3">
        <label for="tagSelect">Emotion Tag (optional)</label>
        <select id="tagSelect" class="form-control" name="tag">
            <option value="">-- Select --</option>
            <option value="guilt">Guilt</option>
            <option value="regret">Regret</option>
            <option value="love">Love</option>
            <option value="fear">Fear</option>
        </select>
    </div>

    <button type="submit" class="btn btn-dark mt-4">Whisper</button>
</form>
